        <DataGrid x:Name="datagridShoppings" HorizontalAlignment="Left" Height="319" Margin="10,10,0,0" VerticalAlignment="Top" Width="351"/>
        <TextBox x:Name="txtboxShoppingName" HorizontalAlignment="Left" Height="23" Margin="366,40,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="112"/>
        <Label x:Name="lblShoppingName" Content="Ime shoppinga" HorizontalAlignment="Left" Margin="380,9,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="datePickerShopping" HorizontalAlignment="Left" Margin="376,92,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSearchShopping" Content="Trazi" HorizontalAlignment="Left" Margin="380,139,0,0" VerticalAlignment="Top" Width="75" Click="btnSearchShopping_Click"/>
        <Button x:Name="btnListAllShopping" Content="List all" HorizontalAlignment="Left" Margin="380,181,0,0" VerticalAlignment="Top" Width="75" Click="btnListAllShopping_Click"/>
        <Label x:Name="lblBudget" Content="" HorizontalAlignment="Left" Margin="163,346,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
