        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Budget"
        mc:Ignorable="d"
        Title="Shopping Manager" Height="450" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
